
   <hr>
<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Customer Details</h2>
    </div>
  <div class="box-content" style="overflow-y: scroll; height:auto">
  <% if @customers.empty? %>
 <h4 align="center">No Record Found </h4>
   <% else %>
      <table class="table table-striped table-bordered responsive">
        <thead>
       <tr>
         <th>Customer Number </th>
      <th>Fullname</th>
      <th>Mobile no</th>
      <th>Phone no</th>
      <th>Email</th>
      <th>Kyc</th>
      <th>Date</th>
      <th>Payment mode</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
        <th></th>
      </tr>
    </thead>
  <tbody>  
      <% @customers.each do |customer| %>
      <tr>
    <td><%= customer.customer_number %></td>
        <td><%= customer.fullname %></td>
        <td><%= customer.mobile_no %></td>
        <td><%= customer.alternate_no %></td>
        <td><%= customer.email %></td>
        <td><%= customer.kyc %></td>
        <td><%= customer.date %></td>
        <td><%= customer.payment_mode %></td>
        
        <td><%= link_to 'Show', customer %></td>

        
        </tr>      
      <% end %>     
   </tbody>
      </table>
    </div>
  </div>
  </div>
</div>
<% end %>