<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Mihpayid</th>
      <th>Txnid</th>
      <th>Status</th>
      <th>Unmappedstatus</th>
      <th>Amount</th>
      <th>Cardcategory</th>
      <th>Email</th>
      <th>Name on card</th>
      <th>Issuing bank</th>
      <th>Customer</th>
      <th>Plan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.mihpayid %></td>
        <td><%= payment.txnid %></td>
        <td><%= payment.status %></td>
        <td><%= payment.unmappedstatus %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.cardCategory %></td>
        <td><%= payment.email %></td>
        <td><%= payment.name_on_card %></td>
        <td><%= payment.issuing_bank %></td>
        <td><%= payment.customer %></td>
        <td><%= payment.plan %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

